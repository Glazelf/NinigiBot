{
    "compilerOptions": {
        "target": "ES2024",
        "moduleResolution": "node",
        "module": "system",
        "outDir": "./build/",
        "incremental": true, // Remove when rewrite complete
        "allowJs": true, // Remove when rewrite complete
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "noEmitOnError": true,
        "sourceMap": true,
        // Fix JSON imports
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}